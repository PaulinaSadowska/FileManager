<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nekodev.paulina.sadowska.filemanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/folder"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity"
            android:theme="@style/AppTheme"
            android:configChanges="locale"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ChooseLanguageActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>

        <activity
            android:name=".activities.ChooseSortMethodActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>

        <activity
            android:name=".activities.PasteFilesActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>

        <activity
            android:name=".activities.DeleteFilesActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>

    </application>

</manifest>
